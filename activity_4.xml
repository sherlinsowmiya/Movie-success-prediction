                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:text="KARNAN (8.5 IMdb) "
                android:textColor="#ff0006"
                android:textFontWeight="40"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:text="Karnan is a 2021 Indian Tamil language action drama film directed by MariSelvaraj,starring DHANUSH as lead. karnan is of the best historical
                society periodic epic drama ,this movie touches the cruelty of untouchability in every context... This is based on a true story and this is a much watchable movie"

                android:textColor="@color/white"
                android:textSize="22dp"

                />


        </LinearLayout>
